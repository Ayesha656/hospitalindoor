<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appointment">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.002"
            tools:layout_editor_absoluteX="-16dp">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="154dp"
                android:src="@drawable/detials" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="186dp"
                android:layout_height="44dp"
                android:layout_gravity="center"
                android:fontFamily="@font/opensansextrabold"
                android:text="Doctor Details"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView3" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="483dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/doctorc" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/opensansextrabold"
                    android:text="DR. MARIA"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dr.Maria"
                    android:drawableLeft="@drawable/user"
                    android:padding="12dp"
                    android:drawablePadding="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"

                    />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="drMaria@gmail.com"
                    android:drawableLeft="@drawable/email"
                    android:padding="12dp"
                    android:drawablePadding="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" Cancer Specialist"
                    android:drawableLeft="@drawable/stethoscope"
                    android:padding="12dp"
                    android:drawablePadding="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neurologist"
                    android:drawableLeft="@drawable/creditcard"
                    android:padding="12dp"
                    android:drawablePadding="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0338598685"
                    android:drawableLeft="@drawable/phone"
                    android:padding="12dp"
                    android:drawablePadding="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9:00-11:00 pm"
                    android:drawableLeft="@drawable/clock"
                    android:padding="12dp"
                    android:drawablePadding="15dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
